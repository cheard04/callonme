<script>
  function unlock(step){
    const s1 = document.getElementById('s1');
    const s2 = document.getElementById('s2');
    const s3 = document.getElementById('s3');
    const s4 = document.getElementById('s4');
    const reveal = document.getElementById('reveal');

    if(step===1){
      s1.style.opacity='0.6'; s1.style.pointerEvents='none';
      s2.style.opacity='1'; s2.style.pointerEvents='auto';
      s1.querySelector('.left .meta').textContent = '✔️ Los Angeles';
      // subtle wobble
      s2.animate([{transform:'translateX(-6px)'},{transform:'translateX(0)'}],{duration:260});
    }
    if(step===2){
      s2.style.opacity='0.6'; s2.style.pointerEvents='none';
      s3.style.opacity='1'; s3.style.pointerEvents='auto';
      s2.querySelector('.left .meta').textContent = '✔️ Griffith Park';
      s3.animate([{transform:'translateY(-6px)'},{transform:'translateY(0)'}],{duration:260});
    }
    if(step===3){
      s3.style.opacity='0.6'; s3.style.pointerEvents='none';
      s4.style.opacity='1'; s4.style.pointerEvents='auto';
      s3.querySelector('.left .meta').textContent = '✔️ The Greek Theatre';
      s4.animate([{transform:'scale(0.98)'},{transform:'scale(1)'}],{duration:200});
    }
    if(step===4){
      s4.style.opacity='0.6'; s4.style.pointerEvents='none';
      s4.querySelector('.left .meta').textContent = '✔️ Ready';
      // show reveal with a quick type-in effect
      reveal.style.display='block';
      reveal.animate([{opacity:0, transform:'translateY(8px)'},{opacity:1, transform:'translateY(0)'}],{duration:380});
    }
  }
</script>
